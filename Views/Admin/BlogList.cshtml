@model IEnumerable<Trave.Models.BaiViet>

@{
    ViewBag.Title = "Quản Lý Bài Viết (Blog)";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">📋 Quản Lý Bài Viết Blog</h2>
<hr />

<div class="row mb-4 align-items-center">

    <div class="col-md-6 mb-3 mb-md-0">
       
    </div>

    <div class="col-md-6">
        <form class="d-flex" action="@Url.Action("Index", "Blog")" method="get">
            <input class="form-control me-2 rounded-pill shadow-sm" type="search" placeholder="Tìm kiếm theo Tiêu đề, Tác giả..." aria-label="Search" name="search">
            <button class="btn btn-secondary rounded-pill shadow-sm" type="submit">Tìm</button>
        </form>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header bg-white py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh Sách (@(Model != null ? Model.Count() : 0) bài)</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0" id="blogTable">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 15%;">Ảnh</th>
                        <th style="width: 30%;">Tiêu Đề & Tóm Tắt</th>
                        <th style="width: 15%;">Tác Giả / Ngày Đăng</th>
                        <th style="width: 10%;" class="text-center">Lượt Xem</th>
                        <th style="width: 10%;" class="text-center">Danh Mục</th>
                        <th style="width: 15%;" class="text-center">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int rowNum = 1; }
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@rowNum</td>
                                <td>
                                    <img src="@Url.Content("~/img/Blog/" + item.HinhAnh)"
                                         alt="Thumbnail"
                                         style="width: 80px; height: 50px; object-fit: cover; border-radius: 5px;">
                                </td>
                                <td>
                                    <strong>@item.TieuDe</strong>
                                    <p class="text-muted small mb-0 text-clamp-2">@item.TomTat</p>
                                </td>
                                <td>
                                    <small class="d-block text-primary fw-bold">
                                       @item.Tacgia
                                    </small>
                                    <small class="text-muted">@(item.NgayDang?.ToString("dd/MM/yyyy"))</small>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-success">@(item.LuotXem ?? 0)</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info text-dark">
                                        @(item.DanhMucBlog != null ? item.DanhMucBlog.TenDanhMuc : "Không rõ")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("BlogEdit", "Admin", new { id=item.MaBaiViet })" class="btn btn-sm btn-outline-warning" title="Sửa">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("BlogDetails", "Admin", new { id=item.MaBaiViet })" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("BlogDelete", "Admin", new { id=item.MaBaiViet })" class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            rowNum++;
                        }
                    }
                </tbody>
            </table>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mt-3 text-center" role="alert">
                Chưa có bài viết nào trong hệ thống. Hãy thêm bài viết mới.
            </div>
        }
    </div>
</div>

<style>
    /* CSS đã giữ nguyên để giới hạn số dòng hiển thị Tóm tắt */
    .text-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>