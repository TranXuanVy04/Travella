@model Trave.Models.Users

@{
    ViewBag.Title = "Tạo tài khoản User mới";
    // Giả định bạn có danh sách Roles được gửi từ Controller qua ViewBag
    List<string> RolesList = new List<string> { "Admin", "Customer", "Employee" };
    ViewBag.Roles = new SelectList(RolesList);

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-dark">@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header py-3 bg-white">
                <h6 class="m-0 fw-bold text-primary">
                    <i class="fas fa-user-plus me-2"></i> Thông tin Người dùng
                </h6>
            </div>
            <div class="card-body p-4">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label fw-bold" })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "form-label fw-bold" })
                                @Html.DropDownList("Role", (SelectList)ViewBag.Roles, "--- Chọn Vai trò ---", htmlAttributes: new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.PasswordHash, "Mật khẩu", htmlAttributes: new { @class = "form-label fw-bold" })
                                <div class="position-relative">
                                    @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control", type = "password", id = "passwordField" } })
                                    <i class="fas fa-eye password-toggle-icon" id="togglePass" style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer;"></i>
                                </div>
                                @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger small" })
                            </div>
                        </div>
                    </div>

                    @Html.HiddenFor(model => model.CreatedAt)

                    <div class="mt-4 pt-3 border-top">
                        <input type="submit" value="Tạo tài khoản" class="btn btn-primary rounded-pill py-2 px-4" />
                        @Html.ActionLink("Quay lại Danh sách", "account", null, new { @class = "btn btn-outline-secondary rounded-pill py-2 px-4 ms-2" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Hàm JavaScript cho chức năng ẩn/hiện mật khẩu
    document.getElementById('togglePass').addEventListener('click', function (e) {
        const passwordField = document.getElementById('passwordField');
        const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordField.setAttribute('type', type);
        this.classList.toggle('fa-eye-slash');
        this.classList.toggle('fa-eye');
    });
</script>

