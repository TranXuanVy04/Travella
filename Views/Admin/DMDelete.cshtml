@model Trave.Models.DanhMuc

@{
    ViewBag.Title = "Xác nhận Xóa";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-dark">@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header py-3 bg-white">
                <h6 class="m-0 fw-bold text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i> Bạn có chắc chắn muốn xóa?
                </h6>
            </div>

            <div class="card-body p-4">

                <div class="alert alert-danger" role="alert">
                    <h5 class="alert-heading">Hành động Nguy hiểm!</h5>
                    <p>Hành động này sẽ <strong>xóa vĩnh viễn</strong> danh mục này. Tất cả các Tour liên quan (nếu có) có thể sẽ bị ảnh hưởng. Vui lòng kiểm tra kỹ trước khi xác nhận.</p>
                </div>

                <h5 class="mt-4">Thông tin Danh mục sắp xóa:</h5>

                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3">
                        <span class="fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.MaDM)
                        </span>
                        <span class="text-muted">
                            <code class="fs-6">@Html.DisplayFor(model => model.MaDM)</code>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3">
                        <span class="fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.TenDM)
                        </span>
                        <span class="fs-6">
                            @Html.DisplayFor(model => model.TenDM)
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3">
                        <span class="fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.soluongsanpham)
                        </span>
                        <span class="badge bg-primary rounded-pill fs-6">
                            @Html.DisplayFor(model => model.soluongsanpham)
                        </span>
                    </li>
                </ul>

                @using (Html.BeginForm("Delete", "Admin", new { id = Model.MaDM }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(model => model.MaDM)

                    <div class="mt-4 pt-3 border-top">
                        <input type="submit" value="Xác nhận Xóa" class="btn btn-danger rounded-pill py-2 px-4" />

                        @Html.ActionLink("Hủy (Quay lại)", "DMList", "Admin", null, new { @class = "btn btn-outline-secondary rounded-pill py-2 px-4 ms-2" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>