@model Trave.Models.Tour

@{
    ViewBag.Title = "Xác nhận Xóa Tour";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-dark">
        <i class="fas fa-trash-alt me-2"></i>@ViewBag.Title
    </h1>
    @Html.ActionLink("Quay lại Danh sách", "Tourlist", null, new { @class = "btn btn-outline-secondary" })
</div>

<div class="card shadow-sm border-0">
    <div class="card-header py-3 bg-white border-bottom border-danger">
        <h6 class="m-0 fw-bold text-danger">
            <i class="fas fa-exclamation-triangle me-2"></i> Cảnh báo: Hành động không thể hoàn tác!
        </h6>
    </div>

    <div class="card-body p-4">
        <div class="alert alert-danger mb-4" role="alert">
            <h5 class="alert-heading fw-bold">Bạn có chắc chắn muốn xóa Tour này?</h5>
            <p class="mb-0">Việc xóa Tour <strong>@Model.TenTour</strong> sẽ xóa vĩnh viễn dữ liệu khỏi hệ thống. Vui lòng kiểm tra kỹ thông tin bên dưới trước khi xác nhận.</p>
        </div>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body p-2 text-center bg-light d-flex align-items-center justify-content-center">
                        @if (!string.IsNullOrEmpty(Model.anhmota))
                        {
                            <img src="@Url.Content("~/img/destination/" + Model.anhmota)"
                                 alt="@Model.TenTour" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;"
                                 onerror="this.src='https://via.placeholder.com/300x200?text=No+Image'" />
                        }
                        else
                        {
                            <div class="text-muted py-5">
                                <i class="fas fa-image fa-3x mb-2"></i>
                                <p>Không có ảnh mô tả</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <h5 class="text-primary fw-bold mb-3">Thông tin chi tiết</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between px-0">
                        <span class="text-muted">Mã Tour:</span>
                        <span class="fw-bold">@Model.MaTour</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between px-0">
                        <span class="text-muted">Tên Tour:</span>
                        <span class="fw-bold text-dark">@Model.TenTour</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between px-0">
                        <span class="text-muted">Giá tham khảo:</span>
                        <span class="fw-bold text-danger fs-5">@Model.Gia.ToString("N0") $</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between px-0">
                        <span class="text-muted">Thời gian: </span>
                        <span>
                            <i class="far fa-clock me-1"></i> @Model.ThoiGian
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between px-0">
                        <span class="text-muted">Danh mục / Địa điểm:</span>
                        <span>@Model.DanhMuc.TenDM - @Model.DiaDiem.TenDD</span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between px-0">
                        <span class="text-muted">Phương tiện:</span>
                        <span><i class="fas fa-shuttle-van me-1"></i> @Html.DisplayFor(model => model.PhuongTien)</span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between px-0">
                        <span class="text-muted">Hướng dẫn viên:</span>
                        <span>
                            @if (Model.guide != null)
                            {
                                <i class="fas fa-user-tie me-1"></i> @Model.guide.tenguide
                            }
                            else
                            {
                                <span class="text-muted fst-italic">(Chưa phân công)</span>
                            }
                        </span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between px-0">
                        <span class="text-muted">Trạng thái:</span>
                        @{
                            string statusClass = Model.trangthai != null && (Model.trangthai.ToLower().Contains("available") || Model.trangthai.ToLower().Contains("còn")) ? "bg-success" : "bg-secondary";
                        }
                        <span class="badge @statusClass rounded-pill">@Model.trangthai</span>
                    </li>
                </ul>

                <div class="mt-3">
                    <span class="text-muted d-block mb-1">Mô tả ngắn:</span>
                    <div class="bg-light p-3 rounded text-secondary small" style="max-height: 100px; overflow-y: auto;">
                        @Model.mota
                    </div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm("TourDelete", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.MaTour)

            <div class="d-flex justify-content-end mt-4 pt-3 border-top">
                @Html.ActionLink("Hủy bỏ", "Tourlist", null, new { @class = "btn btn-light rounded-pill py-2 px-4 me-2" })
                <button type="submit" class="btn btn-danger rounded-pill py-2 px-4">
                    <i class="fas fa-trash-alt me-2"></i> Xác nhận Xóa
                </button>
            </div>
        }
    </div>
</div>