@model IEnumerable<Trave.Models.TinhTrangTour>

@{
    ViewBag.Title = "TTTourList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
    }

    .table thead th {
        background-color: #2c3e50;
        color: white;
        font-weight: 600;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        padding: 0;
        line-height: 35px;
        border-radius: 50%;
        margin: 0 3px;
    }

    .status-badge {
        min-width: 110px;
        font-weight: 500;
    }
</style>
<body>
    <div class="container py-5">
        <div class="card">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h4 class="m-0 text-primary font-weight-bold">
                    <i class="fa-solid fa-list-check me-2"></i>Danh Sách Tình Trạng Tour
                </h4>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle mb-0">
                        <thead class="text-center">
                            <tr>
                                <th>Mô Tả Trạng Thái</th>
                                <th>Tình Trạng (Logic)</th>
                                <th>Mã Tour / Booking</th>
                                <th style="width: 180px;">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold text-secondary ps-3">
                                        @Html.DisplayFor(modelItem => item.Tentinhtrang)
                                    </td>

                                    <td class="text-center">
                                        @if (item.TrangThai == 1)
                                        {
                                            <span class="badge bg-success rounded-pill status-badge py-2">
                                                <i class="fa-solid fa-check-circle me-1"></i>Đã kết thúc
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark rounded-pill status-badge py-2">
                                                <i class="fa-solid fa-person-walking-luggage me-1"></i>Đang đi tour
                                            </span>
                                        }
                                    </td>

                                    <td class="text-center text-primary fw-bold">
                                        @if (item.Booking != null)
                                        {
                                            <span>#@item.Booking.MaTour</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Running...</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <a href="@Url.Action("TTTourEdit", new { id = item.Matinhtrang })" class="btn btn-primary btn-action shadow-sm" title="Sửa" data-bs-toggle="tooltip">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
                {
                    <div class="alert alert-warning text-center mt-4" role="alert">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i> Chưa có dữ liệu tình trạng tour nào. Hãy thêm mới!
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
