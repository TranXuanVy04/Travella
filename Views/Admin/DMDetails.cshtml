@model Trave.Models.DanhMuc

@{
    ViewBag.Title = "Chi tiết Danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-dark">@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header py-3 bg-white">
                <h6 class="m-0 fw-bold text-primary">
                    <i class="fas fa-search me-2"></i> Thông tin Chi tiết
                </h6>
            </div>

            <div class="card-body p-4">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3">
                        <span class="fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.MaDM)
                        </span>
                        <span class="text-muted">
                            <code class="fs-6">@Html.DisplayFor(model => model.MaDM)</code>
                        </span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3">
                        <span class="fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.TenDM)
                        </span>
                        <span class="fs-6">
                            @Html.DisplayFor(model => model.TenDM)
                        </span>
                    </li>

                    <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-3">
                        <span class="fw-bold text-dark">
                            @Html.DisplayNameFor(model => model.soluongsanpham)
                        </span>
                        <span class="badge bg-primary rounded-pill fs-6">
                            @Html.DisplayFor(model => model.soluongsanpham)
                        </span>
                    </li>
                </ul>

                <div class="mt-4 pt-3 border-top">
                    @Html.ActionLink("Chỉnh sửa", "DMEdit", new { id = Model.MaDM }, new { @class = "btn btn-warning rounded-pill py-2 px-4" })

                    @Html.ActionLink("Quay lại Danh sách", "DMList", "Admin", null, new { @class = "btn btn-outline-secondary rounded-pill py-2 px-4 ms-2" })
                </div>
            </div>
        </div>
    </div>
</div>