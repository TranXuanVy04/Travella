@model IEnumerable<Trave.Models.Tour>

@{
    ViewBag.Title = "Quản lý Tour";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-light py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-dark">
                <i class="fas fa-suitcase-rolling me-2"></i>@ViewBag.Title
            </h4>
        </div>
    </div>

    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th style="width: 100px;">Ảnh</th>
                            <th scope="col" class="text-start">Tên Tour</th>
                            <th scope="col">Giá ($)</th>
                            <th scope="col">Thời gian</th>
                            <th scope="col">Phương tiện</th>
                            <th scope="col">Guide</th>
                            <th scope="col">Địa điểm</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col" style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string statusClass = "bg-secondary";
                            if (item.trangthai != null)
                            {
                                if (item.trangthai.ToLower().Contains("available") || item.trangthai.ToLower().Contains("còn"))
                                {
                                    statusClass = "bg-success";
                                }
                                else if (item.trangthai.ToLower().Contains("booked") || item.trangthai.ToLower().Contains("hết"))
                                {
                                    statusClass = "bg-danger";
                                }
                            }

                            <tr>
                                <td class="text-center">
                                    <img src="@Url.Content(String.Format("~/img/Destination/{0}", item.anhmota))"
                                         alt="@item.TenTour"
                                         class="img-thumbnail rounded"
                                         style="width: 80px; height: 60px; object-fit: cover;"
                                         onerror="this.src='https://via.placeholder.com/80x60?text=No+Img'" />
                                </td>

                                <td>
                                    <div class="fw-bold text-primary">@Html.DisplayFor(modelItem => item.TenTour)</div>
                                    <small class="text-muted"><i class="fas fa-folder me-1"></i>@item.DanhMuc.TenDM</small>
                                </td>

                                <td class="text-end fw-bold text-danger">
                                    $@item.Gia.ToString("N0")
                                </td>

                                <td class="text-center small">
                                    <div><i class="far fa-clock me-1"></i>@item.ThoiGian</div>
                                    <div class="text-muted"><i class="fas fa-user me-1"></i>@item.songuoi khách</div>
                                </td>

                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.PhuongTien)
                                </td>

                                <td class="text-center">
                                    @if (item.guide != null)
                                    {
                                        if (!string.IsNullOrEmpty(item.guide.anhguide))
                                        {
                                            <img src="@Url.Content("~/Content/images/guides/" + item.guide.anhguide)"
                                                 class="rounded-circle border" style="width: 30px; height: 30px; object-fit: cover;"
                                                 title="@item.guide.tenguide" />
                                        }
                                        else
                                        {
                                            <i class="fas fa-user-tie" title="@item.guide.tenguide"></i>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>

                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.DiaDiem.TenDD)
                                </td>

                                <td class="text-center">
                                    <span class="badge @statusClass rounded-pill">
                                        @Html.DisplayFor(modelItem => item.trangthai)
                                    </span>
                                </td>

                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("TourEdit", "admin", new { id = item.MaTour })" class="btn btn-outline-warning btn-sm" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("TourDetails", "admin", new { id = item.MaTour })" class="btn btn-outline-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a href="@Url.Action("TourDelete", "admin", new { id = item.MaTour })" class="btn btn-outline-danger btn-sm" title="Xóa">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3 text-muted small">
                Hiển thị @Model.Count() tour trong danh sách.
            </div>
        }
        else
        {
            <div class="alert alert-info text-center py-5" role="alert">
                <i class="fas fa-folder-open fa-3x mb-3 d-block"></i>
                <h5>Chưa có dữ liệu Tour</h5>
                <p>Hãy bấm nút "Tạo Tour mới" để bắt đầu.</p>
                <a href="@Url.Action("TourCreate", "Admin")" class="btn btn-primary mt-2">Tạo ngay</a>
            </div>
        }
    </div>
</div>