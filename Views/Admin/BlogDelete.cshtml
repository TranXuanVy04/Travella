@model Trave.Models.BaiViet

@{
    ViewBag.Title = "Xác nhận Xóa | " + @Model.TieuDe;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container ">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden" style="max-width: 1200px; margin: 0 auto;">
        <div class="bg-danger text-white text-center py-5">
            <i class="fas fa-trash-alt fa-4x mb-3 opacity-75"></i>
            <h3 class="fw-bold">XÁC NHẬN XÓA VĨNH VIỄN</h3>
            @*<p class="lead mb-0 opacity-90">Bài viết sẽ bị xóa hoàn toàn và không thể khôi phục</p>*@
        </div>

        <div class="card-body p-5">
            <h2 class="text-center text-danger fw-bold mb-5">@Model.TieuDe</h2>

            <div class="row g-5 align-items-center">

                <div class="col-lg-4">
                    <div class="text-center">
                        @if (!string.IsNullOrEmpty(Model.HinhAnh))
                        {
                            <img src="@Url.Content("~/img/Blog/" + Model.HinhAnh)"
                                 alt="Ảnh đại diện"
                                 class="img-fluid rounded-4 shadow"
                                 style="height: 250px; object-fit: cover; width: 100%;">
                        }
                        else
                        {
                            <div class="bg-secondary bg-opacity-10 rounded-4 d-flex align-items-center justify-content-center flex-column"
                                 style="height: 250px; border: 3px dashed #ccc;">
                                <i class="fas fa-image fa-4x text-muted mb-3"></i>
                                <span class="text-muted fw-bold">Không có ảnh</span>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="h-100 d-flex flex-column justify-content-center">
                        <h4 class="fw-bold mb-4 text-primary">
                            <i class="fas fa-info-circle me-2"></i>Chi tiết
                        </h4>

                        <table class="table table-sm table-borderless table-confirm-delete">
                            <tr><th class="text-muted w-30">Mã bài viết</th><td class="fw-bold">#@Model.MaBaiViet</td></tr>
                            <tr><th class="text-muted">Tác giả</th><td>@(Model.Tacgia ?? "N/A")</td></tr>
                            <tr>
                                <th class="text-muted">Danh mục</th>
                                <td>
                                    <span class="badge bg-primary fs-6 px-3 py-1">
                                        @(Model.DanhMucBlog?.TenDanhMuc ?? "Chưa phân loại")
                                    </span>
                                </td>
                            </tr>
                            <tr><th class="text-muted">Ngày đăng</th><td>@(Model.NgayDang?.ToString("dd/MM/yyyy HH:mm"))    </td></tr>
                            <tr>
                                <th class="text-muted">Lượt xem</th>
                                <td><span class="badge bg-success fs-6 px-3 py-1">@(Model.LuotXem ?? 0)</span></td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.TomTat))
                            {
                                <tr><th class="text-muted align-top">Tóm tắt</th><td class="text-muted small">@Model.TomTat</td></tr>
                            }
                        </table>
                    </div>
                </div>
            </div>

            <div class="mt-5 pt-4 border-top">
                @using (Html.BeginForm("BlogDelete", "Blog", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.MaBaiViet)

                    <div class="d-flex gap-3 justify-content-center">
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill px-5 shadow-sm">
                            <i class="fas fa-trash-alt me-2"></i> Xóa vĩnh viễn
                        </button>
                        <a href="@Url.Action("BlogList")" class="btn btn-outline-secondary btn-lg rounded-pill px-5">
                            <i class="fas fa-arrow-left me-2"></i> Hủy bỏ
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Điều chỉnh CSS để phù hợp với Layout Admin */
    .table-confirm-delete th {
        width: 150px; /* Căn đều cột tiêu đề */
    }

    .btn:hover {
        transform: translateY(-2px);
        transition: all 0.2s;
    }

    .bg-danger {
        background: linear-gradient(135deg, #ff5252, #e94545) !important;
    }
</style>