@model Trave.Models.Tour

@{
    ViewBag.Title = "Chỉnh sửa Tour";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-dark">@ViewBag.Title: @Model.TenTour</h1>
</div>

@using (Html.BeginForm("TourEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.MaTour)

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header py-3 bg-white">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-edit me-2"></i> Thông tin cơ bản
                    </h6>
                </div>
                <div class="card-body p-4">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.MaTour, htmlAttributes: new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.MaTour, new { htmlAttributes = new { @class = "form-control bg-light", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.MaTour, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.TenTour, htmlAttributes: new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.TenTour, new { htmlAttributes = new { @class = "form-control", @autofocus = "autofocus" } })
                            @Html.ValidationMessageFor(model => model.TenTour, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.mota, htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.TextAreaFor(model => model.mota, new { @class = "form-control", rows = 8 })
                        @Html.ValidationMessageFor(model => model.mota, "", new { @class = "text-danger small" })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header py-3 bg-white">
                    <h6 class="m-0 fw-bold text-primary">
                        <i class="fas fa-cog me-2"></i> Thuộc tính Tour
                    </h6>
                </div>
                <div class="card-body p-4">

                    <div class="mb-3 text-center">
                        <label class="form-label fw-bold">Ảnh hiện tại</label>
                        <div class="mb-2">
                            <img src="@Url.Content(String.Format("~/img/Destination/{0}", Model.anhmota))"
                                 alt="Ảnh Tour"
                                 class="img-thumbnail"
                                 style="max-width: 100%; height: auto; object-fit: cover;"
                                 onerror="this.src='https://via.placeholder.com/300x200?text=No+Image'" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="ImageFile" class="form-label fw-bold">Chọn ảnh mới (nếu cần thay đổi)</label>
                        <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                        @Html.HiddenFor(model => model.anhmota)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Gia, htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                        @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger small" })
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(model => model.ThoiGian, htmlAttributes: new { @class = "form-label fw-bold" })
                            @Html.EditorFor(model => model.ThoiGian, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: 3N2Đ" } })
                            @Html.ValidationMessageFor(model => model.ThoiGian, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.PhuongTien, "Phương tiện", htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.PhuongTien, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: Xe du lịch, Máy bay" } })
                        @Html.ValidationMessageFor(model => model.PhuongTien, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.trangthai, htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.EditorFor(model => model.trangthai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaDM, "Danh mục Tour", htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.DropDownList("MaDM", null, "--- Chọn Danh mục ---", htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaDD, "Địa điểm", htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.DropDownList("MaDD", null, "--- Chọn Địa điểm ---", htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaDD, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.MaGuide, "Hướng dẫn viên", htmlAttributes: new { @class = "form-label fw-bold" })
                        @Html.DropDownList("MaGuide", null, "--- Chọn Hướng dẫn viên ---", htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MaGuide, "", new { @class = "text-danger small" })
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <input type="submit" value="Lưu thay đổi" class="btn btn-primary rounded-pill py-2 px-4" />
        @Html.ActionLink("Quay lại Danh sách", "Tourlist", null, new { @class = "btn btn-outline-secondary rounded-pill py-2 px-4 ms-2" })
    </div>
}