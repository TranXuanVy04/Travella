@model Trave.Models.Tour

@{
    ViewBag.Title = Model.TenTour;
    var relatedTours = ViewBag.RelatedTours as List<Trave.Models.Tour>;
}

<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<style>
    /* Ẩn nút tăng giảm mặc định của trình duyệt trong thẻ input */
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield; /* Cho Firefox */
    }

    /* Hiệu ứng nút bấm */
    .btn-white {
        background-color: #ffffff;
        border: 1px solid #eee;
        transition: all 0.2s;
    }

        .btn-white:hover {
            background-color: #0d6efd; /* Màu xanh Primary */
            color: #fff !important;
            border-color: #0d6efd;
            transform: scale(1.1); /* Phóng to nhẹ */
        }
</style>

<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h1 class="text-white display-3 mb-4">Chi Tiết Tour</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Tour", "Home")">Tours</a></li>
            <li class="breadcrumb-item active text-white">@Model.TenTour</li>
        </ol>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row g-5">

            <div class="col-lg-8">
                <div class="mb-4">
                    <img src="@Url.Content("~/img/destination/" + Model.anhmota)"
                         class="img-fluid w-100 rounded-3 shadow-lg"
                         style="height: 500px; object-fit: cover;"
                         alt="@Model.TenTour">
                </div>

                <h1 class="display-5 fw-bold mb-3">@Model.TenTour</h1>

                <div class="d-flex flex-wrap align-items-center mb-4 pb-4 border-bottom">
                    <span class="badge bg-primary rounded-pill fs-6 py-2 px-3 me-2 mb-2">
                        <i class="fa fa-clock me-2"></i>@Model.ThoiGian Ngày
                    </span>
                    <span class="badge bg-light text-dark rounded-pill fs-6 py-2 px-3 me-2 mb-2 shadow-sm border">
                        <i class="fa fa-map-marker-alt text-primary me-2"></i>@Model.DiaDiem.ThanhPho
                    </span>
                    <span class="badge bg-light text-dark rounded-pill fs-6 py-2 px-3 me-2 mb-2 shadow-sm border">
                        <i class="fa fa-tag text-primary me-2"></i>@Model.DanhMuc.TenDM
                    </span>
                    <span class="badge bg-light text-dark rounded-pill fs-6 py-2 px-3 me-2 mb-2 shadow-sm border">
                        <i class="fa fa-users text-primary me-2"></i>Tối đa @Model.songuoi người
                    </span>
                    <span class="badge bg-light rounded-pill fs-6 py-2 px-3 me-2 mb-2 shadow-sm border">
                        <i class="fa fa-route text-primary  me-2"></i>@Model.PhuongTien
                    </span>
                    <span class="badge bg-light rounded-pill fs-6 py-2 px-3 me-2 mb-2 shadow-sm border">
                        <i class="fa fa-user-tie text-primary  me-2"></i>@(Model.guide?.tenguide ?? "")
                    </span>
                </div>

                <h2 class="text-primary fw-bold mb-4 d-lg-none display-6">Giá: $@Model.Gia</h2>

                <ul class="nav details-tab-nav" id="detailsTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab" aria-controls="overview" aria-selected="true">Tổng quan</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="itinerary-tab" data-bs-toggle="tab" data-bs-target="#itinerary" type="button" role="tab" aria-controls="itinerary" aria-selected="false">Lịch trình</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="include-tab" data-bs-toggle="tab" data-bs-target="#include" type="button" role="tab" aria-controls="include" aria-selected="false">Bao gồm</button>
                    </li>
                </ul>
                <div class="tab-content" id="detailsTabContent">
                    <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
                        <h4 class="mb-3">Mô tả chi tiết</h4>
                        <p class="text-muted" style="line-height: 1.8;">
                            @* Đảm bảo bạn đã .Include(t => t.motatour) trong Controller *@
                            @*@Model.motatour.motadai*@
                        </p>
                    </div>

                    <div class="tab-pane fade" id="itinerary" role="tabpanel" aria-labelledby="itinerary-tab">
                        <h4 class="mb-3">Lịch trình chi tiết</h4>
                        <div class="accordion itinerary-accordion" id="itineraryAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        <i class="fa fa-calendar-check text-primary me-3"></i> Ngày 1: Khởi hành
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#itineraryAccordion">
                                    <div class="accordion-body">
                                        Nội dung mô tả cho ngày 1...
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        <i class="fa fa-calendar-check text-primary me-3"></i> Ngày 2: Tham quan
                                    </button>
                                </h2>
                                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#itineraryAccordion">
                                    <div class="accordion-body">
                                        Nội dung mô tả cho ngày 2...
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="include" role="tabpanel" aria-labelledby="include-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="mb-3"><i class="fa fa-check text-success me-2"></i> Bao gồm</h5>
                                <ul class="list-unstyled text-muted">
                                    <li class="mb-2"><i class="fa fa-check text-success me-2"></i> Vé máy bay khứ hồi</li>
                                    <li class="mb-2"><i class="fa fa-check text-success me-2"></i> Khách sạn 4-5 sao</li>
                                    <li class="mb-2"><i class="fa fa-check text-success me-2"></i> Bữa sáng hàng ngày</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h5 class="mb-3"><i class="fa fa-times text-danger me-2"></i> Không bao gồm</h5>
                                <ul class="list-unstyled text-muted">
                                    <li class="mb-2"><i class="fa fa-times text-danger me-2"></i> Phí Visa</li>
                                    <li class="mb-2"><i class="fa fa-times text-danger me-2"></i> Bữa trưa và bữa tối</li>
                                    <li class="mb-2"><i class="fa fa-times text-danger me-2"></i> Bảo hiểm du lịch</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <div class="col-lg-4">
                <div class="card shadow-lg rounded-3 border-0 sticky-top sticky-top-form">
                    <div class="card-body p-4">
                        <h4 class="mb-2">Đặt Tour Này</h4>
                        <h2 class="text-primary fw-bold mb-4">$@Model.Gia <small class="text-muted fs-6 fw-normal">/ người</small></h2>

                        @* 1. Thêm id="bookTourForm" cho form *@
                        @using (Html.BeginForm("BookTour", "Home", FormMethod.Get, new { id = "bookTourForm" }))
                        {
                            @Html.Hidden("id", Model.MaTour.Trim())

                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input type="text"
                                               class="form-control bg-light border-0"
                                               id="datepicker"
                                               name="date" placeholder="Ngày đi"
                                               >
                                        <label for="datepicker">Ngày đi</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label class="form-label text-muted small fw-bold">Số lượng hành khách</label>
                                    <div class="d-flex align-items-center justify-content-between p-2 border rounded-pill bg-light shadow-sm">

                                        <button type="button" class="btn btn-white rounded-circle shadow-sm text-primary" id="btnMinus" style="width: 40px; height: 40px;">
                                            <i class="fas fa-minus"></i>
                                        </button>

                                        <input type="number"
                                               class="form-control border-0 bg-transparent text-center fw-bold fs-5"
                                               id="SelectPerson"
                                               name="persons"
                                               value="@(Request.QueryString["persons"] ?? "1")"
                                               min="1"
                                               readonly
                                               style="max-width: 100px;">

                                        <button type="button" class="btn btn-white rounded-circle shadow-sm text-primary" id="btnPlus" style="width: 40px; height: 40px;">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="col-12 d-flex justify-content-center">
                                    @* 2. Thay <a> bằng <button type="button"> *@
                                    <button type="button" class="btn btn-primary rounded-pill px-4 py-2 fw-bold shadow-sm transition-hover"
                                            onclick="handleBookNow(@Request.IsAuthenticated.ToString().ToLower())">
                                        Book Now
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div> @if (relatedTours != null && relatedTours.Any())
        {
            <hr class="my-5">
            <div class="mx-auto text-center mb-5" style="max-width: 900px;">
                <h5 class="section-title px-3">Related Tours</h5>
                <h1 class="mb-0">Các Tour Tương Tự</h1>
            </div>
            <div class="row g-4 justify-content-center">

                @foreach (var item in relatedTours)
                {
                    <div class="col-lg-4 col-md-6 d-flex">
                        <div class="card package-card h-100 rounded-3 shadow-sm border-0">

                            <div class="package-img-wrapper rounded-top-3">
                                <img src="@Url.Content("~/img/Destination/"+item.anhmota)" alt="@item.TenTour">
                                <div class="category-badge shadow-sm">
                                    <i class="fa fa-tag me-1"></i> @item.DanhMuc.TenDM
                                </div>
                            </div>

                            <div class="card-body p-4 d-flex flex-column">
                                <div class="d-flex justify-content-between mb-3 package-meta">
                                    <small><i class="fa fa-map-marker-alt text-primary me-2"></i>@item.DiaDiem.ThanhPho</small>
                                    <small><i class="fa fa-clock text-primary me-2"></i>@item.ThoiGian Ngày</small>
                                </div>

                                <h5 class="card-title mb-3 text-dark text-clamp-2">
                                    <a href="@Url.Action("Details", "Home", new { id = item.MaTour.Trim() })" class="text-dark text-decoration-none">
                                        @item.TenTour
                                    </a>
                                </h5>

                                <p class="card-text text-muted mb-4 text-clamp-3" style="font-size: 0.95rem; line-height: 1.6;">
                                    @item.mota
                                </p>

                                <div class="mt-auto-wrapper">
                                    <hr class="text-muted opacity-25">
                                    <div class="d-flex align-items-center justify-content-between mt-3">
                                        <div>
                                            <small class="text-muted d-block" style="font-size: 0.8rem;">Giá chỉ từ</small>
                                            <span class="price-tag">$@item.Gia</span>
                                        </div>
                                        <a class="btn btn-primary rounded-pill px-4 py-2 fw-bold shadow-sm transition-hover"
                                           href="@Url.Action("Details", "Home", new { id = item.MaTour.Trim() })">
                                            Book Now
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    flatpickr("#datepicker", {
        minDate: "today",
        dateFormat: "Y-m-d",
        altInput: true,
        altFormat: "d/m/Y",
        disableMobile: true,
        onReady: function (selectedDates, dateStr, instance) {
            instance.altInput.setAttribute("required", "");
        }
    });

</script>

<script>
    // (Giả sử thư viện SweetAlert đã được tải)
    const loginUrl = '@Url.Action("Login", "Auth")';

    function handleBookNow(isAuthenticated) {
        const form = document.getElementById('bookTourForm');
        const fp = document.querySelector("#datepicker")._flatpickr; // flatpickr instance
        const dateValue = fp?.selectedDates.length > 0 ? fp.input.value : "";

        if (!dateValue) {
            Swal.fire("Lỗi", "Bạn phải chọn ngày đi!", "error");
            return;
        }

        // copy altInput value về input thật để submit
        document.getElementById("datepicker").value = dateValue;

        if (isAuthenticated) {
            form.submit();
            return;
        }

        // Chưa đăng nhập
        Swal.fire({
            title: 'Yêu cầu đăng nhập',
            text: "Bạn phải đăng nhập để thực hiện chức năng này!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Đến trang đăng nhập',
            cancelButtonText: 'Huỷ bỏ'
        }).then((result) => {
            if (result.isConfirmed) {
                const bookTourUrl = form.getAttribute('action');
                const formData = new FormData(form);
                const queryString = new URLSearchParams(formData).toString();
                const returnUrl = bookTourUrl + "?" + queryString;
                window.location.href = loginUrl + "?ReturnUrl=" + encodeURIComponent(returnUrl);
            }
        });
    }


</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const btnMinus = document.getElementById("btnMinus");
        const btnPlus = document.getElementById("btnPlus");
        const inputPersons = document.getElementById("SelectPerson");

        // Sự kiện nút Giảm (-)
        btnMinus.addEventListener("click", function () {
            let currentValue = parseInt(inputPersons.value) || 1;
            if (currentValue > 1) {
                inputPersons.value = currentValue - 1;
                updateTotalPrice(); // Gọi hàm cập nhật giá (nếu có)
            }
        });

        // Sự kiện nút Tăng (+)
        btnPlus.addEventListener("click", function () {
            let currentValue = parseInt(inputPersons.value) || 1;
            inputPersons.value = currentValue + 1;
            updateTotalPrice(); // Gọi hàm cập nhật giá (nếu có)
        });

        // Hàm giả lập cập nhật giá (Bạn có thể thay bằng logic thực của bạn)
        function updateTotalPrice() {
            // Kích hoạt sự kiện 'change' để các script khác biết số lượng đã đổi
            inputPersons.dispatchEvent(new Event('change'));

            // Ví dụ: Nếu bạn có script tính tổng tiền, nó sẽ chạy ở đây
            // console.log("Số người mới: " + inputPersons.value);
        }
    });
</script>