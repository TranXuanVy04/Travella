@model  IEnumerable<Trave.Models.Tour>
@using Trave.Models
@using System.Linq
@{
    var allDestinations = ViewBag.AllDestinations as List<Trave.Models.DiaDiem> ?? new List<Trave.Models.DiaDiem>();
    var allCountries = ViewBag.AllCountries as List<string> ?? new List<string>();
}

@{
    ViewBag.Title = "Travela - Dream Destinations, Unforgettable Experiences";
}


<div class="container-fluid position-relative p-0">
    <!-- Carousel Start -->
    <div class="carousel-header">
        <div id="carouselId" class="carousel slide" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                <li data-bs-target="#carouselId" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#carouselId" data-bs-slide-to="1"></li>
                <li data-bs-target="#carouselId" data-bs-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img src="~/img/carousel-2.jpg" class="img-fluid" alt="Image">
                    <div class="carousel-caption">
                        <div class="p-3" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Explore The World</h4>
                            <h1 class="display-2 text-capitalize text-white mb-4">Let's The World Together!</h1>
                            <p class="mb-5 fs-5">
                                We make finding your dream vacation simple. From relaxing beach escapes to thrilling expeditions, discover curated experiences designed just for you.
                            </p>
                            <div class="d-flex align-items-center justify-content-center">
                                <a class="btn-hover-bg btn btn-primary rounded-pill text-white py-3 px-5" href="@Url.Action("tour","home")">Discover Now</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/img/carousel-1.jpg" class="img-fluid" alt="Image">
                    <div class="carousel-caption">
                        <div class="p-3" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Explore The World</h4>
                            <h1 class="display-2 text-capitalize text-white mb-4">Tours for Every Kind of Traveler</h1>
                            <p class="mb-5 fs-5">
                                Whatever your travel style, we have an adventure that fits. Find tours matching your passion, budget, and schedule. Let's plan your perfect getaway.
                            </p>
                            <div class="d-flex align-items-center justify-content-center">
                                <a class="btn-hover-bg btn btn-primary rounded-pill text-white py-3 px-5" href="@Url.Action("tour","home")">Discover Now</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/img/carousel-3.jpg" class="img-fluid" alt="Image">
                    <div class="carousel-caption">
                        <div class="p-3" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase fw-bold mb-4" style="letter-spacing: 3px;">Explore The World</h4>
                            <h1 class="display-2 text-capitalize text-white mb-4">Find Your Inspiration</h1>
                            <p class="mb-5 fs-5">
                                From the peaks of mountains to the heart of ancient cities, inspiration is everywhere. Discover our collection of hand-picked tours and find the one that calls to you.
                            </p>
                            <div class="d-flex align-items-center justify-content-center">
                                <a class="btn-hover-bg btn btn-primary rounded-pill text-white py-3 px-5" href="@Url.Action("tour","home")">Discover Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                <span class="carousel-control-prev-icon btn bg-primary" aria-hidden="false"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                <span class="carousel-control-next-icon btn bg-primary" aria-hidden="false"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <!-- Carousel End -->
</div>
<div class.="container pt-4">

    @if (TempData["BookingSuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Thành công!</strong> @TempData["BookingSuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["BookingErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Lỗi!</strong> @TempData["BookingErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<!-- Navbar & Hero End -->
<!-- Destination Start -->
<div class="container-fluid destination py-5">
    <div class="container py-5">
        <div class="mx-auto text-center mb-5" style="max-width: 900px;">
            <h5 class="section-title px-3">Destination</h5>
            <h1 class="mb-0">Popular Destination</h1>
        </div>
        <div class="tab-class text-center">

            <ul class="nav nav-pills elegant-filter-bar d-inline-flex justify-content-center" id="pills-tab" role="tablist">

                <li class="nav-item" role="presentation">
                    <a class="nav-link active"
                       id="pill-tab-all" data-bs-toggle="pill" href="#pill-content-all"
                       role="tab" aria-controls="pill-content-all" aria-selected="true">
                        All Countries
                    </a>
                </li>

                @foreach (var country in allCountries.Take(4))
                {
                    var countryId = country.Trim().Replace(" ", "-");
                    <li class="nav-item" role="presentation">
                        <a class="nav-link"
                           id="pill-tab-@countryId" data-bs-toggle="pill" href="#pill-content-@countryId"
                           role="tab" aria-controls="pill-content-@countryId" aria-selected="false">
                            @country.Trim()
                        </a>
                    </li>
                }

                @if (allCountries.Count() > 4)
                {
                    <li class="nav-item dropdown position-static">
                        <a class="nav-link dropdown-toggle"
                           data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
                            More Destinations
                        </a>
                        <div class="dropdown-menu mega-menu w-100">
                            <div class="container">
                                <div class="row g-3">
                                    @foreach (var country in allCountries.Skip(4))
                                    {
                                        var countryId = country.Trim().Replace(" ", "-");
                                        <div class="col-lg-3 col-md-4 col-sm-6">
                                            <a class="mega-menu-item text-center"
                                               id="pill-tab-@countryId" data-bs-toggle="pill" href="#pill-content-@countryId"
                                               role="tab" aria-controls="pill-content-@countryId" aria-selected="false">
                                                @country.Trim()
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>

            <div class="tab-content" id="pills-tabContent">

                <div class="tab-pane fade show active" id="pill-content-all" role="tabpanel" aria-labelledby="pill-tab-all">
                    <div class="row g-4">
                        @foreach (var dest in allDestinations.Take(6))
                        {
                            var tourCount = Model.Count(t => t.MaDD == dest.MaDD);

                            <div class="col-lg-4 col-md-6 d-flex">

                                <a class="destination-card d-block h-100 w-100"
                                   href="@Url.Action("Tour", "Home", new { countryFilter = dest.QuocGia.Trim() })">

                                    <img class="destination-card-img"
                                         src="@Url.Content("~/img/Destination/" + dest.HinhAnh)"
                                         alt="@dest.ThanhPho">

                                    <div class="tour-count-badge">@tourCount Tours</div>

                                    <div class="destination-card-overlay">
                                        <h4 class="destination-card-title text-white">@dest.ThanhPho</h4>
                                        <p class="destination-card-country text-white">@dest.QuocGia</p>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>

                @foreach (var country in allCountries)
                {
                    var countryId = country.Trim().Replace(" ", "-");
                    <div class="tab-pane fade" id="pill-content-@countryId" role="tabpanel" aria-labelledby="pill-tab-@countryId">
                        <div class="row g-4">

                            @foreach (var dest in allDestinations.Where(d =>
                                d.QuocGia != null &&
                                d.QuocGia.Trim().Equals(country.Trim(), StringComparison.OrdinalIgnoreCase)
                            ))
                            {
                                var tourCount = Model.Count(t => t.MaDD == dest.MaDD);

                                <div class="col-lg-4 col-md-6 d-flex">
                                    <a class="destination-card d-block h-100 w-100"
                                       href="@Url.Action("Tour", "Home", new { countryFilter = dest.QuocGia.Trim() })">

                                        <img class="destination-card-img" src="@Url.Content("~/img/Destination/"+dest.HinhAnh)" alt="@dest.ThanhPho">
                                        <div class="tour-count-badge">@tourCount Tours</div>

                                        <div class="destination-card-overlay">
                                            <h4 class="destination-card-title text-white">@dest.ThanhPho</h4>
                                            <p class="destination-card-country text-white">@dest.QuocGia</p>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Destination End -->
<!-- Packages Start -->
<div class="container-fluid packages py-5">
    <div class="container py-5">
        <div class="mx-auto text-center mb-5" style="max-width: 900px">
            <h5 class="section-title px-3">Packages</h5>
            <h1 class="mb-0">Awesome Packages</h1>
        </div>
        <div class="packages-carousel owl-carousel">
            @foreach (var item in Model.Take(9))
            {
                <div class="packages-item p-2 h-100">
                    <div class="card package-card h-100 rounded-3 shadow-sm border-0">

                        <div class="package-img-wrapper rounded-top-3">
