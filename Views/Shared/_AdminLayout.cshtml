<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link href="~/Content/css/Admin_Layout.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex">
        <nav class="admin-sidebar bg-dark p-3" id="adminSidebar">
            <div class="logo text-center mb-3">
                <a href="@Url.Action("dashboard","Admin")" class="text-decoration-none">
                    <h4 class="m-0 fw-bold">
                        <i class="fa fa-map-marker-alt me-2" style="color: var(--admin-primary-color);"></i>Travela
                    </h4>
                </a>
            </div>

            <ul class="nav nav-pills flex-column mt-4">
                <li class="nav-item mb-1">
                    <a class="nav-link @(ViewBag.Title == "Dashboard" ? "active" : "")"
                       href="@Url.Action("dashboard", "Admin")">
                        <i class="fa-solid fa-gauge-high me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item mb-1">
                    <a class="nav-link"
                       href="#dm-submenu"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="dm-submenu">
                        <i class="fa-solid fa-suitcase-rolling me-2"></i> Quản lý Danh Mục
                    </a>
                    <div class="collapse" id="dm-submenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("DMList", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Danh sách Danh mục
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("DMCreate", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Thêm Danh mục mới
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item mb-1">
                    <a class="nav-link"
                       href="#tour-submenu"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="tour-submenu">
                        <i class="fa-solid fa-suitcase-rolling me-2"></i> Quản lý Tour
                    </a>
                    <div class="collapse" id="tour-submenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Tourlist", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Danh sách Tour
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("TourCreate", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Thêm Tour mới
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item mb-1">
                    <a class="nav-link"
                       href="#tdtour-submenu"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="tdtour-submenu">
                        <i class="fa-solid fa-suitcase-rolling me-2"></i> Theo dõi tour
                    </a>
                    <div class="collapse" id="tdtour-submenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("TTTourlist", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Danh sách Tour
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item mb-1">
                    <a class="nav-link"
                       href="#blog-submenu"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="blog-submenu">
                        <i class="fa-solid fa-suitcase-rolling me-2"></i> Quản lý Bài Viết
                    </a>
                    <div class="collapse" id="blog-submenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("BlogList", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Danh sách Bài Viết
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("BlogCreate", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Thêm Bài Viết Mới
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item mb-1">
                    <a class="nav-link"
                       href="#account-submenu"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="account-submenu">
                        <i class="fa-solid fa-users-cog me-2"></i> Quản lý Tài khoản
                    </a>
                    <div class="collapse" id="account-submenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Account", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Danh sách
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("AccountCreate","Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Thêm mới
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>


                <li class="nav-item mb-1">
                    <a class="nav-link" href="@Url.Action("Index", "Home")" target="_blank">
                        <i class="fa-solid fa-home me-2"></i> Về trang chủ
                    </a>
                </li>
            </ul>
        </nav>

        <main class="admin-main-content flex-grow-1">

            <nav class="navbar navbar-expand-lg navbar-light bg-white p-3 admin-topbar shadow-sm sticky-top">
                <div class="container-fluid">

                    <button class="btn btn-outline-secondary d-md-none me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#adminSidebar" aria-controls="adminSidebar">
                        <i class="fa-solid fa-bars"></i>
                    </button>

                    <form class="d-none d-sm-inline-block">
                        <div class="input-group">
                            <input type="text" class="form-control border-0 bg-light" placeholder="Tìm kiếm...">
                            <button class="btn btn-light" type="button">
                                <i class="fa-solid fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <ul class="navbar-nav ms-auto flex-row align-items-center">

                        <li class="nav-item me-3">
                            <a class="nav-link" href="#">
                                <i class="fa-solid fa-bell"></i>
                            </a>
                        </li>

                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle d-flex align-items-center"
                               href="#"
                               id="navbarUserDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">

                                <i class="fa fa-user me-2"></i>
                                <span class="d-none d-sm-inline">
                                    @Html.Encode(User.Identity.Name ?? Session["UserName"] ?? "Người dùng")
                                </span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarUserDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("MyProfile", "Account")">
                                        <i class="fas fa-user-circle me-2"></i> Hồ sơ của tôi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("MyBookings", "Booking")">
                                        <i class="fas fa-box me-2"></i> Đơn đặt tour
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "auth")"><i class="fa-solid fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="admin-content-area">
                @RenderBody()
            </div>


        </main>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>