<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link href="~/Content/css/Admin_Layout.css" rel="stylesheet" />
    <style>
        .hover-shadow-xl:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2) !important;
}

.transition-all {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Hiệu ứng sóng nhẹ khi hover (cho Admin) */
.bg-primary {
    background: linear-gradient(135deg, #6366f1, #8b5cf6) !important;
}

/* Làm mờ nhẹ + không cho hover effect khi bị khóa */
.bg-dark[onclick]:hover {
    opacity: 0.95;
    transform: none;
}
    </style>
</head>
<body>
    
    <div class="d-flex">
        
        <nav class="admin-sidebar bg-dark p-3" id="adminSidebar">
            <div class="logo text-center mb-3">
                <a href="@Url.Action("dashboard", "Admin")" class="text-decoration-none">
                    <h4 class="m-0 fw-bold">
                        <i class="fa fa-map-marker-alt me-2" style="color: var(--admin-primary-color);"></i>Travela
                    </h4>
                </a>
            </div>

            <ul class="nav nav-pills flex-column mt-4">

                @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                {
                    // TRƯỜNG HỢP 1: CÓ QUYỀN -> Hiện link Dashboard bình thường
                    <li class="nav-item mb-1">
                        <a class="nav-link @(ViewBag.Title == "Dashboard" ? "active" : "")"
                           href="@Url.Action("dashboard", "Admin")">
                            <i class="fa-solid fa-gauge-high me-2"></i> Dashboard
                        </a>
                    </li>
                }
                else
                {
                    // TRƯỜNG HỢP 2: KHÁCH HÀNG -> Hiện link Dashboard bị khóa
                    <li class="nav-item mb-1">
                        <a class="nav-link"
                           href="javascript:void(0);"
                           onclick="alert('⛔ Bạn không đủ quyền truy cập trang Quản trị!');"
                           style="opacity: 0.6; cursor: not-allowed;">
                            <i class="fa-solid fa-gauge-high me-2"></i> Dashboard 🔒
                        </a>
                    </li>
                }
                <li class="nav-item mb-1">
                    <a class="nav-link"
                       href="#dm-submenu"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="dm-submenu">
                        <i class="fa-solid fa-suitcase-rolling me-2"></i> Quản lý Danh Mục
                    </a>
                    <div class="collapse" id="dm-submenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("DMList", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Danh sách Danh mục
                                </a>
                            </li>
                            <li class="nav-item">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="nav-link" href="@Url.Action("DMCreate", "Admin")">
                                        <i class="fa-solid fa-caret-right me-2"></i> Thêm Danh mục mới
                                    </a>
                                }
                                else
                                {
                                    <div style="cursor: not-allowed; position: relative;"
                                         onclick="showLockedToast()" class="nav-link" href="@Url.Action("DMCreate", "Admin")">
                                        <i class="fa-solid fa-caret-right me-2"></i> Thêm mới     <i class="fa-solid fa-lock text-warning me-2"></i>
                                    </div>
                                }
                            </li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item mb-1">
                    <a class="nav-link"
                       href="#tour-submenu"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="tour-submenu">
                        <i class="fa-solid fa-suitcase-rolling me-2"></i> Quản lý Tour
                    </a>
                    <div class="collapse" id="tour-submenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Tourlist", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Danh sách Tour
                                </a>
                            </li>
                            <li class="nav-item">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="nav-link" href="@Url.Action("TourCreate", "Admin")">
                                        <i class="fa-solid fa-caret-right me-2"></i> Thêm Tour mới
                                    </a>
                                }
                                else
                                {
                                    <div style="cursor: not-allowed; position: relative;"
                                         onclick="showLockedToast()" class="nav-link" href="@Url.Action("TourCreate", "Admin")">
                                        <i class="fa-solid fa-caret-right me-2"></i> Thêm Tour mới     <i class="fa-solid fa-lock text-warning me-2"></i>
                                    </div>
                                }
                            </li>








                        </ul>
                    </div>
                </li>





                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mb-1">
                        <a class="nav-link"
                           href="#tdtour-submenu"
                           data-bs-toggle="collapse"
                           role="button"
                           aria-expanded="false"
                           aria-controls="tdtour-submenu">
                            <i class="fa-solid fa-suitcase-rolling me-2"></i> Theo dõi tour
                        </a>
                        <div class="collapse" id="tdtour-submenu">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("TTTourlist", "Admin")">
                                        <i class="fa-solid fa-caret-right me-2"></i> Danh sách Tour
                                    </a>





                                </li>
                            </ul>
                        </div>
                    </li>
                }
                else { }




                <li class="nav-item mb-1">
                    <a class="nav-link"
                       href="#blog-submenu"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="blog-submenu">
                        <i class="fa-solid fa-suitcase-rolling me-2"></i> Quản lý Bài Viết
                    </a>
                    <div class="collapse" id="blog-submenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("BlogList", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Danh sách Bài Viết
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("BlogCreate", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Thêm Bài Viết Mới
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item mb-1">
                    <a class="nav-link"
                       href="#chat-submenu"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="chat-submenu">
                        <i class="fa-solid fa-suitcase-rolling me-2"></i> Hỗ trợ khách hàng
                    </a>
                    <div class="collapse" id="chat-submenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("ChatCenter", "Admin")">
                                    <i class="fa-solid fa-caret-right me-2"></i> Chat Center
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>


                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item mb-1">
                        <a class="nav-link"
                           href="#account-submenu"
                           data-bs-toggle="collapse"
                           role="button"
                           aria-expanded="false"
                           aria-controls="account-submenu">
                            <i class="fa-solid fa-users-cog me-2"></i> Quản lý Tài khoản
                        </a>
                        <div class="collapse" id="account-submenu">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Account", "Admin")">
                                        <i class="fa-solid fa-caret-right me-2"></i> Danh sách
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("AccountCreate","Admin")">
                                        <i class="fa-solid fa-caret-right me-2"></i> Thêm mới
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                }
                else
                {

                }
                <li class="nav-item mb-1">
                    <a class="nav-link" href="@Url.Action("Index", "Home")" target="_blank">
                        <i class="fa-solid fa-home me-2"></i> Về trang chủ
                    </a>
                </li>
            </ul>
        </nav>

        <main class="admin-main-content flex-grow-1">

            <nav class="navbar navbar-expand-lg navbar-light bg-white p-3 admin-topbar shadow-sm sticky-top">
                <div class="container-fluid">

                    <button class="btn btn-outline-secondary d-md-none me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#adminSidebar" aria-controls="adminSidebar">
                        <i class="fa-solid fa-bars"></i>
                    </button>

                    <form class="d-none d-sm-inline-block">
                        <div class="input-group">
                            <input type="text" class="form-control border-0 bg-light" placeholder="Tìm kiếm...">
                            <button class="btn btn-light" type="button">
                                <i class="fa-solid fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <ul class="navbar-nav ms-auto flex-row align-items-center">
                        <li class="nav-item me-3">
                            <a class="nav-link" href="#">
                                <i class="fa-solid fa-bell"></i>
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center"
                               href="#"
                               id="navbarUserDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">

                                <i class="fa fa-user me-2"></i>
                                <span class="d-none d-sm-inline">
                                    @Html.Encode(User.Identity.Name ?? Session["UserName"] ?? "Người dùng")
                                </span>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarUserDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("MyProfile", "Account")">
                                        <i class="fas fa-user-circle me-2"></i> Hồ sơ của tôi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("MyBookings", "Booking")">
                                        <i class="fas fa-box me-2"></i> Đơn đặt tour
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "auth")"><i class="fa-solid fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="admin-content-area">
                @RenderBody()
            </div>

        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.3/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
function showLockedToast() {
    if (document.getElementById('lockedToast')) {
        bootstrap.Toast.getOrCreateInstance(document.getElementById('lockedToast')).show();
        return;
    }

    const toast = `
    <div id="lockedToast" class="toast position-fixed bottom-0 start-50 translate-middle-x mb-4" style="z-index: 9999;" role="alert">
        <div class="toast-body bg-dark text-white border border-danger rounded-3 p-3 d-flex align-items-center">
            <i class="fa-solid fa-lock text-warning me-3 fs-4"></i>
            <div>
                <strong>Quyền truy cập bị hạn chế</strong><br>
                <small>Chỉ tài khoản <span class="text-danger fw-bold">ADMIN</span> mới được quyền truy cập</small>
            </div>
            <button type="button" class="btn-close btn-close-white ms-4" data-bs-dismiss="toast"></button>
        </div>
    </div>`;

    document.body.insertAdjacentHTML('beforeend', toast);
    bootstrap.Toast.getOrCreateInstance(document.getElementById('lockedToast')).show();
}
</script>

    @RenderSection("Scripts", required: false)
</body>
</html>